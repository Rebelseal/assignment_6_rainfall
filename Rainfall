package assignment_6_rainfall;

/**
 *
 * @author John Gunter
 */
public class Rainfall {
    private double[] rainfall = null;
    private double average, total, highest, lowest;
    
    
    public Rainfall (double[] rain)
    {
        rainfall = rain;
        
    }
    
    public double[] getRainfall()
    {
        return rainfall;
    }
    
    public void setTotal()
    {
        for(int i = 0; i < rainfall.length; ++i )
        {
            total = total + rainfall[i];
        }
        
    }
    
    public double getTotal()
    {
        return total;
    }
    
    public void setAverage()
    {
        average = total/rainfall.length;
        
    }
    
    public double getAverage()
    {
        return average;
    }
    
    public void setHighest()
    {
        for (int counter = 1; counter < rainfall.length; counter++)
        {
            if (rainfall[counter] > highest)
            {
                highest = rainfall[counter];
            }
        }
      
    }
    
    public double getHighest()
    {
        return highest;
    }
    
    public void setLowest()
    {
        for (int counter = 1; counter < rainfall.length; counter++)
        {
            if (rainfall[counter] < lowest)
            {
                lowest = rainfall[counter];
            }
        }
      
    }
    
    public double getLowest()
    {
        return lowest;
    }
    
    
}
