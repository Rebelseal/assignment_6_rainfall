package assignment_6_rainfall;

import java.util.Scanner;
import javax.swing.*;

/**
 *
 * @author John Gunter
 */
public class Assignment_6_Rainfall {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args)
    {
        
        
        Scanner keyboard = new Scanner(System.in);
        double[] rain = new double[12];
        
        double average, total, highest, lowest;
        
        for (int e = 0; e < rain.length; e++ )
        {
            System.out.print("Enter an integer value: "); 
            rain[e] = keyboard.nextDouble();
            
            while (rain[e] < 0)
            {
                System.out.print("A negative amount of rain cannot fall. "
                        + "Input must be equal or greater than 0. ");
                rain[e] = keyboard.nextDouble();
            } 
          
        }

        Rainfall Rain = new Rainfall(rain);
        
        printArray(Rain);
        
        setTotal(Rain);
        
        total = Rain.getTotal();
        
        setAverage(Rain);
        
        average = Rain.getAverage();
        
        setHighest(Rain);
        
        highest = Rain.getHighest();
        
        setLowest(Rain);
        
        lowest = Rain.getLowest();
        
        JOptionPane.showMessageDialog(null, "The total amount of rainfall for "
                + "the given year is " + total + ". \n");
        
        JOptionPane.showMessageDialog(null, "The average amount of rainfall for "
                + "the given year is " + average + ". \n");
        
        JOptionPane.showMessageDialog(null, "The highest amount of rainfall for "
                + "a single month the given year is " + highest + ". \n");
        
        JOptionPane.showMessageDialog(null, "The lowest amount of rainfall for "
                + "a single month the given year is " + lowest + ". \n");
        
    }
    
    
    public static Rainfall printArray(Rainfall Rain)
    {
        double[] rainfall = Rain.getRainfall();
        
        JTextArea text;

        JScrollPane pane;
        
        String input = ""; 
        
        for (int i = 0; i < rainfall.length; i++)
        {
            input += rainfall[i] + " inches. \n";
        }

        
        
        text = new JTextArea(5,15);
        
        text.setText(input);

        pane = new JScrollPane(text); 

        JOptionPane.showMessageDialog(null, pane);
        
        return Rain;
    }
    
    public static Rainfall setTotal (Rainfall Rain)
    {
        Rain.setTotal();
        return Rain;
    }
    
    public static Rainfall setAverage (Rainfall Rain)
    {
        Rain.setAverage();
        return Rain;
    }
    
    public static Rainfall setHighest (Rainfall Rain)
    {
        Rain.setHighest();
        return Rain;
    }
    
    public static Rainfall setLowest (Rainfall Rain)
    {
        Rain.setLowest();
        return Rain;
    }
}
